<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFragment"
    android:background="@color/white"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">





            <LinearLayout
                android:layout_width="match_parent"
                android:background="#3AC840"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="90dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtDisplayName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chuc bạn ngày mới vui vẻ"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:layout_marginTop="5dp"
                        android:text="Chào mừng bạn đến với chúng tôi"/>
                </LinearLayout>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgPofile"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_margin="10dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="@android:color/darker_gray"
                    app:shapeAppearanceOverlay="@style/circleImageView"
                    android:src="@drawable/intro1" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="10dp"
                android:background="@color/custom_color_primary"
                android:paddingBottom="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewUpload"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardPreventCornerOverlap="true"
                    android:layout_marginEnd="5dp"
                    app:cardUseCompatPadding="false">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="top|center"
                        android:src="@drawable/camera"
                        android:layout_marginTop="20dp"
                        android:id="@+id/img"
                        android:contentDescription="@string/app_name" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="20dp"
                        android:text="Tải lên"
                        android:textSize="15sp"
                        android:layout_marginTop="70dp"
                        android:textStyle="normal" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewPlant"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="true"
                    android:layout_marginEnd="5dp"
                    app:cardUseCompatPadding="false">

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="top|center"
                        android:layout_marginTop="20dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/specie" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginTop="70dp"
                        android:layout_marginBottom="20dp"
                        android:text="Thực vật"
                        android:textSize="15sp"
                        android:textStyle="normal" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewArticle"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardPreventCornerOverlap="true"
                    android:paddingTop="10dp"
                    app:cardUseCompatPadding="false">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="top|center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/article"
                        android:id="@+id/img1"
                        android:contentDescription="@string/app_name" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="20dp"
                        android:text="Bài viết"
                        android:textSize="15sp"
                        android:layout_marginTop="70dp"
                        android:textStyle="normal" />


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Danh sách loài"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:textSize="18sp"/>

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/rltPlant1"
                            android:layout_width="250dp"
                            android:layout_height="140dp"
                            android:padding="4dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/plant1" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thực vật 1"
                                android:textColor="@color/white"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="20dp"
                                android:padding="4dp"
                                android:textSize="20sp"
                                android:textStyle="normal" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Khám phá tôi"
                                android:textColor="@color/white"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="4sp"
                                android:padding="4dp"
                                android:textSize="16sp"
                                android:textStyle="normal" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rltPlant2"
                            android:layout_width="250dp"
                            android:layout_height="140dp"
                            android:padding="4dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/plant4"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thực vật 2"
                                android:textColor="@color/white"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="20dp"
                                android:padding="4dp"
                                android:textSize="20sp"
                                android:textStyle="normal" />
                            <TextView
                                android:id="@+id/text1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Khám phá tôi"
                                android:textColor="@color/white"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="4sp"
                                android:padding="4dp"
                                android:textSize="16sp"
                                android:textStyle="normal" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rltPlant3"
                            android:layout_width="250dp"
                            android:layout_height="140dp"
                            android:padding="4dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/plant3" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thực vật 3"
                                android:textColor="@color/white"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="20dp"
                                android:padding="4dp"
                                android:textSize="20sp"
                                android:textStyle="normal" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Khám phá tôi"
                                android:textColor="@color/white"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="4sp"
                                android:padding="4dp"
                                android:textSize="16sp"
                                android:textStyle="normal" />
                        </RelativeLayout>
                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/custom_color_secondary_light"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Danh sách bài đăng"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:textSize="18sp"/>
                <ScrollView
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="fill_parent">
                    <GridView
                        android:id="@+id/grvArticle"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:horizontalSpacing="10dp"
                        android:numColumns="1"
                        android:verticalSpacing="10dp"/>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>